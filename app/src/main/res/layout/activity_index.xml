<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Index"
    android:background="@color/white"
    android:gravity="center"
    >

    <Button
        android:id="@+id/bio"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Bio-Organic"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@color/ButtonColor"/>

    <Button
        android:id="@+id/fert"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Fertilizers"
        android:textSize="25dp"
        android:textStyle="bold"
        android:background="@color/ButtonColor"
        android:layout_below="@+id/bio"/>

    <Button
        android:id="@+id/ins_fun"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Insecticides Fungicides"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/fert"
        android:background="@color/ButtonColor"/>

    <Button
        android:id="@+id/add"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Add new"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/ins_fun"
        android:background="@color/ButtonColor" />

    <Button
        android:id="@+id/bal1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="Show Balance"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_below="@+id/add"
        android:background="@color/ButtonColor" />

    <Button
        android:id="@+id/prod"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bal1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/ButtonColor"
        android:text="Purchase"
        android:textSize="25dp"
        android:textStyle="bold" />

</RelativeLayout>